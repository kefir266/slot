{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./output",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ]
}
